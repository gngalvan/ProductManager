<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Productos</h1>

        <div name="cart" class="boxCart">
            <button class="buttonCart" onclick="goToCart()">  
                <img class="iconCart" src="https://cdn.icon-icons.com/icons2/1863/PNG/512/shopping-cart_118662.png">
                <span class="cart-badge" id="quantityBadge">0</span>
            </button>
        </div>

        {{#each products.products}}
        <div class="cardProduct">
            <p class="title">{{this.title}}</p>
            <p class="description">{{this.description}}</p>
            <p class="price">{{this.price}}</p>
            <p class="stock">Stock:{{this.stock}}</p>
            <div class="productsButtons">
                <button id="removeProd" onclick="reduce(this)">-</button>
                <p id="quantity">1</p>
                <button id="addProd" onclick="increment(this)">+</button>
                <button id="addToCart" onclick="addToCart(this)">ADD</button>
            </div>
        </div>
        {{/each}}

        <div class="paginado">
            <button id="prev" onclick="navigateTo('{{pagination.prevPage}}')">PREV</button>
            <p id="numberPage">{{pagination.page}}</p>
            <button id="next" onclick="navigateTo('{{pagination.nextPage}}')">NEXT</button>
        </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/home.js"></script>
    
</body>
</html>