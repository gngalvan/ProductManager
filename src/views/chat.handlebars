<div class="chatBox">
    <div class="chatGeneral container" id="chatGeneral">
        <h1>chat</h1>
        <div class="chat container-fluid" id="chat">
            {{#each messages}}
            <div class="message">
                <p class="title">{{this.email}}</p>
                <p class="description">{{this.message}}</p>
                <p class="time">{{this.timestamp}}</p>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="chatForm container fixed-bottom mb-5">
        <form class="form-group" target="noredirect" id="newmessage">
            <input class ="form-control" type="text" name="email" id="email" placeholder="email"/>
            <input class ="form-control" type="text" name="message" id="message" placeholder="message" autocomplete="off"/>
            <button type="submit" class="btn btn-secondary">Enviar</button>
        </form>
    </div>
</div>

<script>
    let chatBox = document.getElementById("chatGeneral");
    chatBox.scrollTop = chatBox.scrollHeight;
</script>
